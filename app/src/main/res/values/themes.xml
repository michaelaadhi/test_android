<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Test" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:isLightTheme" tools:targetApi="q">true</item>
        <item name="isLightTheme">true</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/bg_solid_white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimaryVariant">@color/white</item>

        <item name="android:textColorPrimary">@color/text_color_selector</item>
        <item name="android:textColor">@color/text_color_selector</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/PrimaryButton.Rounded</item>
        <item name="buttonStyle">@style/PrimaryButton.Rounded</item>
        <item name="buttonStyleSmall">@style/SecondaryButton.Rounded</item>
        <item name="android:buttonStyle">@style/PrimaryButton.Rounded</item>
        <item name="android:buttonStyleSmall">@style/SecondaryButton.Rounded</item>

        <item name="android:fontFamily">@font/font</item>
        <item name="fontFamily">@font/font</item>
        <item name="android:textSize">@dimen/sp14</item>

        <item name="textInputStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarThumbVertical">@null</item>
        <item name="android:scrollbarThumbHorizontal">@null</item>

        <item name="dialogTheme">@style/MyDialog</item>
        <item name="android:dialogTheme">@style/MyDialog</item>
        <item name="bottomSheetDialogTheme">@style/TransparentDialogStyle</item>
        <item name="appBarLayoutStyle">@style/AppBarLayoutStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="NoBorder">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearance">@style/NoBorder</item>
        <item name="android:backgroundTint">@color/button_background_tint</item>
        <item name="backgroundTint">@color/button_background_tint</item>
    </style>

    <style name="PrimaryButton.Rounded" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearance">@style/Circle</item>
        <item name="android:backgroundTint">@color/button_background_tint</item>
        <item name="backgroundTint">@color/button_background_tint</item>
    </style>

    <style name="SecondaryButton.Rounded" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:strokeColor">@color/colorPrimary</item>
        <item name="shapeAppearance">@style/Circle</item>
        <item name="android:backgroundTint">@color/button_background_tint</item>
        <item name="backgroundTint">@color/button_background_tint</item>
    </style>

    <style name="InputLayoutStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">@style/EditTextThemeOverlay</item>
        <item name="android:minHeight">@dimen/dp56</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="boxStrokeColor">@color/input_layout_border_color_selector</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <!--        <item name="editTextStyle">@style/KredivoEditTextStyle</item>-->
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/edit_text_color_selector</item>
        <item name="android:textColorHint">@color/edit_text_color_selector</item>
        <item name="hintTextColor">@color/edit_text_hint_color_selector</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:minHeight">@dimen/dp56</item>
        <item name="android:textColor">@color/edit_text_color_selector</item>
        <item name="android:textColorHint">@color/edit_text_color_selector</item>
        <item name="hintTextColor">@color/edit_text_hint_color_selector</item>
        <item name="boxStrokeColor">@color/input_layout_border_color_selector</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CheckBoxStyle" parent="@style/Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/CheckBoxStyle.Theme.Overlay</item>
        <item name="android:textColor">@color/darker_grey</item>
        <item name="buttonTint">?attr/colorPrimary</item>
    </style>

    <style name="CheckBoxStyle.Theme.Overlay" parent="">
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSurface">@color/dark_grey</item>
    </style>

    <style name="MyDialog" parent="Theme.Test">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowAnimationStyle">@style/Animation.Window</item>
    </style>

    <style name="Animation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/slide_top_to_bottom</item>
    </style>

    <style name="TransparentDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppBarLayoutStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="titleCentered">true</item>
        <item name="titleCollapseMode">fade</item>
        <item name="titleMarginStart">?attr/actionBarSize</item>
        <item name="titleMarginEnd">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/ToolbarStyle.Title</item>
    </style>

    <style name="ToolbarStyle.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="ToolbarStyle.Title.Expanded" parent="ToolbarStyle.Title">
        <item name="android:textColor">@color/transparent</item>
    </style>
</resources>